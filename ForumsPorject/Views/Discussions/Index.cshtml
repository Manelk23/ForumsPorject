@{
    ViewData["Title"] = "Discussion";
}

@model IEnumerable<DiscussionModel>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Accueil</a></li>
        <li class="breadcrumb-item"><a href="/">Forums</a></li>
        <li class="breadcrumb-item"><a href="/">Themes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Discussions</li>
    </ol>
</nav>

<style>

   
    .p-pageWrapper {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: #f8f9fa;
        margin: auto;
        width: 100%;
    }

    .block-header {
        padding: 15px 15px;
        margin: 0;
        text-decoration: none;
        font-size: 20px;
        text-align: left;
        color: #f1f3f4;
        font-weight: 400;
        background: linear-gradient(#2a8c4a, #2a8c4a);
    }

    .card img {
        width: 400px; /* ou toute autre valeur en pixels */
        height: 200px; /* ou toute autre valeur en pixels */
        margin: 0 auto; /* Centrez l'image horizontalement */
        object-fit: cover;
        border-top-left-radius: 15px; /* Adjust the radius as needed */
        border-top-right-radius: 15px; /* Adjust the radius as needed */
    }

    .block-h1 {
        font-size: 46px;
        color: #120902;
        font-weight: bold;
        text-align: center;
        margin-top: 3%;
    }

    .custom-card {
        border-radius: 15px; /* Adjust the value as needed */
    }

    a {
        color: white;
    }

    .custom-rectangle {
        width: 80px;
        height: auto;
        background: #FFF;
        padding: 16px;
        text-align: center;
        margin-left: auto;
        margin-bottom: 0;
        display: block;
        position: fixed;
        border-radius: 20px;
        overflow: hidden;
        -webkit-box-shadow: 0 3px 5px 0 rgba(0,1,1,.1);
        box-shadow: 0 3px 5px 0 rgba(0,1,1,.1);
    }

    .btn-custom {
        background-color: #5ccb5f;
        color: #fff; /* Couleur du texte */
    }
</style>

<div class="text-center p-pageWrapper">
    <a class="block-header" asp-action="Create" asp-route-themeId="@Model.FirstOrDefault()?.ThemeId">Créer une nouvelle discussion</a>
    <br />
    <br />
    <div>

        <div class="custom-rectangle">
            <a href="https://www.linkedin.com/sharing/share-offsite/?url=https%3A%2F%2Fwww.codeur.com%2Fblog%2Fcreer-un-forum%2F" class="meks_ess-item socicon-linkedin">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/ca/LinkedIn_logo_initials.png" alt="LinkedIn" class="rounded-image" data-url="https://www.linkedin.com/cws/share?url=https%3A%2F%2Fwww.codeur.com%2Fblog%2Fcreer-un-forum%2F">
            </a>
            <a href="https://api.whatsapp.com/send?text=Cr%C3%A9er%20un%20forum%20en%208%20%C3%A9tapes%20https%3A%2F%2Fwww.codeur.com%2Fblog%2Fcreer-un-forum%2F" class="meks_ess-item socicon-whatsapp prevent-share-popup">
                <img src="https://www.svgrepo.com/show/382712/whatsapp-whats-app.svg" alt="WhatsApp" class="rounded-image">
            </a>
            <a href="https://www.facebook.com/sharer/sharer.php?u=https://localhost:7203/" class="meks_ess-item socicon-whatsapp prevent-share-popup">
                <img src="https://img.freepik.com/vecteurs-premium/logo-medias-sociaux-bleu_197792-1759.jpg?w=740" alt="Facebook" class="rounded-image">
            </a>
            <a href="mailto:?subject=Cr%C3%A9er%20un%20forum%20en%208%20%C3%A9tapes&amp" class="meks_ess-item socicon-whatsapp prevent-share-popup">
                <img src=" https://www.iconbolt.com/iconsets/social-media-logos/email-gmail-logo-mail-social-social-media.svg" alt="Email" class="rounded-image">
            </a>
        </div>
        <div class="d-flex justify-content-between">
            <div class="row row-cols-1 row-cols-md-2 g-4" style="margin:auto;">
                @foreach (var desc in Model)
                {
                    <div class="col">

                        <div class="card custom-card" style="width: 25rem; height: 20rem; margin:auto; margin-left: auto;">

                            <div class="card-body" style="height: 70%; background-color:#27a3df;font-family: 'Poppins';">
                                <h2>
                                    <a href="@Url.Action("Index", "Message", new { id = desc.Id })" class="category-link">@desc.Title</a>
                                </h2>
                            </div>
                            <div class="card-body" style="height: 30%;">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <a class="btn btn-custom" type="submit" asp-action="Edit" asp-route-id="@desc.Id">Modifier</a>
                                            <a class="btn btn-warning" type="submit" asp-action="Delete" asp-route-id="@desc.Id">Supprimer</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>

    </div>
</div>








