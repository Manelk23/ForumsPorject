@model ForumsPorject.Models.InputUtilisateur
@{
    ViewData["Title"] = "S'inscrire";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page">S'inscrire</li>
    </ol>
</nav>
<style>
    .breadcrumb:active {
        -webkit-text-size-adjust: 100%;
        font-size: 120%;
        font-family: 'Oxygen', sans-serif;
        font-weight: 400;
        color: #929494;
        word-wrap: break-word;
        --input-border-heavy: #dfe4e4;
        --input-border-light: #f8f9f9;
        box-sizing: border-box;
        list-style: none;
        margin: 0;
        padding: 0;
        margin-bottom: 5px;
        line-height: 1.5;
    }

    .breadcrumb-item {
        font-family: 'Font Awesome 5 Pro';
        font-size: 120%; /* Taille plus grande du texte */
        font-weight: 400;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        color: #929494; /* Couleur gris pour l'état normal */
    }

        .breadcrumb-item a {
            color: #929494; /* Couleur gris pour l'état normal */
            font-size: 100%; /* Taille plus grande du texte */
            font-weight: 400;
        }

        .breadcrumb-item:hover a {
            color: #ff7e0d; /* Couleur gris pour l'état de survol */
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>'; /* Ajoute le symbole > entre les éléments de la miette de pain */
            color: #929494; /* Couleur gris pour le symbole > */
            margin: 0 5px; /* Marge autour du symbole > pour l'espacement */
        }


    .p-nav-list {
        color: #fff;
        background: #ff7e0d;
    }

    .p-pageWrapper {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: #f8f9fa;
    }
</style>

<div class="p-pageWrapper">
    <div class="text-center ">
        <h1>@ViewData["Title"]</h1>
    </div>
    <form asp-action="RegisterUtilisateur" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Pseudonyme"></label>
                        <input asp-for="Pseudonyme" class="form-control" />
                        <span asp-validation-for="Pseudonyme" class="text-danger"></span>
                    </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cheminavatar"></label>
                    <input asp-for="Cheminavatar" class="form-control" />
                    <span asp-validation-for="Cheminavatar" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Signature"></label>
                    <input asp-for="Signature" class="form-control" />
                    <span asp-validation-for="Signature" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                </br>
                </br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                </div>
            </div>
        </div>
    </form>

    <div class="alert alert-success">
        @Context.Session.GetString("Message")
    </div>
</div>
